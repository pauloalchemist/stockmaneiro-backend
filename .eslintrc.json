{
    "env": {
        "browser": true,
        "es2017": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "no-tabs": ["error", {"allowIdentationTabs": true}]
    }
}
